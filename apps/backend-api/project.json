{
    "name": "backend-api",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/backend-api/src",
    "projectType": "application",
    "targets": {
        "serve": {
            "executor": "@nx/js:node",
            "options": {
                "buildTarget": "backend-api:build",
                "runBuildTargetDependencies": false,
                "watch": false
            },
            "configurations": {
                "production": {
                    "buildTarget": "backend-api:build:production"
                }
            }
        },
        "serve-dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "nodemon src/server.js",
                "cwd": "apps/backend-api"
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/apps/backend-api",
                "main": "apps/backend-api/src/server.js",
                "tsConfig": "apps/backend-api/tsconfig.json",
                "assets": [
                    "apps/backend-api/src/assets"
                ]
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/apps/backend-api"
            ],
            "options": {
                "jestConfig": "apps/backend-api/jest.config.js",
                "passWithNoTests": true
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "options": {
                "lintFilePatterns": [
                    "apps/backend-api/**/*.js"
                ]
            }
        }
    },
    "tags": [
        "type:app",
        "scope:backend"
    ]
}